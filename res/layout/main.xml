<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context=".MainActivity">
    <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
    </SurfaceView>

    <Spinner
            android:id="@+id/spFlash"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:visibility="gone"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="21dp"
            android:text="Flash Mode"
            android:id="@+id/textView"
            android:visibility="gone" android:textColor="#ffffffff"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Effect"
            android:id="@+id/textViewCeF" android:layout_marginLeft="75dp" android:layout_marginTop="81dp"
            android:visibility="gone" android:textColor="#ffffffff"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spColor" android:layout_marginLeft="150dp" android:layout_marginTop="60dp"
            android:visibility="gone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Mode"
            android:id="@+id/textViewFm" android:layout_marginLeft="75dp" android:layout_marginTop="141dp"
            android:visibility="gone" android:textColor="#ffffffff"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spFocusMode" android:layout_marginLeft="150dp" android:layout_marginTop="120dp"
            android:visibility="gone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anti Band"
            android:id="@+id/textViewAB" android:layout_marginLeft="75dp" android:layout_marginTop="201dp"
            android:visibility="gone" android:textColor="#ffffffff"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spAB" android:layout_marginLeft="150dp" android:layout_marginTop="180dp"
            android:visibility="gone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scenes"
            android:id="@+id/textViewSM" android:layout_marginLeft="75dp" android:layout_marginTop="261dp"
            android:visibility="gone" android:textColor="#ffffffff"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spSceneMode" android:layout_marginLeft="150dp" android:layout_marginTop="240dp"
            android:visibility="gone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White Bal"
            android:id="@+id/textViewWB" android:layout_marginLeft="75dp" android:layout_marginTop="321dp"
            android:visibility="gone" android:textColor="#ffffffff"/>
    <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spWhiteBalance" android:layout_marginLeft="150dp" android:layout_marginTop="300dp"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/setButton" android:layout_gravity="left|bottom"
            android:src="@drawable/parametres" android:adjustViewBounds="false"
            android:background="@android:color/transparent" android:baselineAlignBottom="true"
            android:onClick="onClickSetButton" android:layout_marginLeft="20dp" android:layout_marginBottom="10dp"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/exitButton" android:layout_gravity="left|bottom" android:onClick="onClickExit"
            android:src="@drawable/params_out" android:background="@android:color/transparent"
            android:layout_marginLeft="20dp" android:layout_marginBottom="10dp" android:visibility="gone"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pictureButton" android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/btn_shutter_default" android:background="@android:color/transparent"
            android:layout_marginBottom="5dp" android:onClick="onClickPicture" android:visibility="gone"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/vidChngBtn" android:layout_gravity="left|top" android:src="@drawable/ic_switch_video"
            android:background="@android:color/transparent" android:visibility="gone"
            android:onClick="onClickVidChngBtn"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/photoBtn" android:layout_gravity="left|top" android:onClick="onClickPhoto"
            android:src="@drawable/ic_switch_camera" android:background="@android:color/transparent"
            android:visibility="gone"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/startRecord" android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickStartRecord"
            android:src="@drawable/btn_shutter_video_default" android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" android:visibility="gone"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/stopRecord" android:layout_gravity="right|bottom"
            android:src="@drawable/btn_shutter_video_recording" android:background="@android:color/transparent"
            android:onClick="onClickStopRecord" android:layout_marginBottom="10dp" android:layout_marginRight="20dp"
            android:visibility="gone"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cameraChngF" android:layout_gravity="right|top"
            android:src="@drawable/ic_switch_front"
            android:background="@android:color/transparent" android:onClick="onClickChngCamF"
            android:visibility="visible"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cameraChngR" android:layout_gravity="right|top"
            android:background="@android:color/transparent" android:src="@drawable/ic_switch_back"
            android:adjustViewBounds="false" android:visibility="visible" android:onClick="onClickChngCamR"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="37dp"
            android:id="@+id/recIm" android:layout_gravity="left|top"
            android:layout_marginLeft="0dp" android:visibility="gone" android:background="@drawable/rec"
            android:layout_marginTop="7dp"/>
    <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chrono" android:layout_gravity="left|top"
            android:layout_marginTop="7dp" android:visibility="gone" android:layout_marginLeft="65dp"
            android:autoText="false" android:textColor="@android:color/holo_red_dark" android:textSize="25dp"/>

</FrameLayout>